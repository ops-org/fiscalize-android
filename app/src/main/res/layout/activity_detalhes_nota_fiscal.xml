<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/ops_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@mipmap/fundo_com_sombra"
        android:layout_margin="@dimen/margin_small"
        android:paddingBottom="@dimen/padding_medium"
        android:layout_weight="1">

        <include layout="@layout/detalhes_nota_fiscal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/ghostwhite"
        android:padding="@dimen/padding_smallest">

        <LinearLayout
            android:id="@+id/view_group_suspeita"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/button_confiavel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/verde"
                    android:textColor="@color/branco"
                    android:text="@string/label_confiavel"
                    android:layout_weight="1"
                    style="@style/Button"/>

                <Button
                    android:id="@+id/button_nao_sei"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/cinza_claro"
                    android:textColor="@color/cinza_escuro"
                    android:text="@string/label_nao_sei"
                    android:layout_weight="1"
                    style="@style/Button"/>

                <Button
                    android:id="@+id/button_suspeita"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/vermelho"
                    android:textColor="@color/branco"
                    android:text="@string/label_suspeita"
                    android:layout_weight="1"
                    style="@style/Button"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_group_suspeita_valor"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/label_suspeita_valor"
                android:layout_marginBottom="@dimen/margin_medium"
                style="@style/TextPergunta" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/button_suspeita_valor_sim"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/verde"
                    android:text="@string/label_sim"
                    android:layout_weight="1"
                    style="@style/Button"/>

                <Button
                    android:id="@+id/button_suspeita_valor_nao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/vermelho"
                    android:text="@string/label_nao"
                    android:layout_weight="1"
                    style="@style/Button"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_group_suspeita_objeto"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/label_suspeita_objeto"
                android:layout_marginBottom="@dimen/margin_medium"
                style="@style/TextPergunta" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/button_suspeita_objeto_sim"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/verde"
                    android:text="@string/label_sim"
                    android:layout_weight="1"
                    style="@style/Button"/>

                <Button
                    android:id="@+id/button_suspeita_objeto_nao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/vermelho"
                    android:text="@string/label_nao"
                    android:layout_weight="1"
                    style="@style/Button"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_group_suspeita_beneficiario"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/label_suspeita_beneficiario"
                android:layout_marginBottom="@dimen/margin_medium"
                style="@style/TextPergunta" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/button_suspeita_beneficiario_sim"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/verde"
                    android:text="@string/label_sim"
                    android:layout_weight="1"
                    style="@style/Button"/>

                <Button
                    android:id="@+id/button_suspeita_beneficiario_nao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/vermelho"
                    android:text="@string/label_nao"
                    android:layout_weight="1"
                    style="@style/Button"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
